#include <graphics.h>
#include <conio.h>
#include <math.h>
#define PI 3.142

int x1 = 100, y1 = 100, x2 = 150, y2 = 50, x3 = 200, y3 = 100;
int main()
{
    clrscr();
    int gd = DETECT, gm;
    initgraph(&gd, &gm, "F:\\BGI");
        setcolor(GREEN);
    line(x1, y1, x2, y2);
    line(x2, y2, x3, y3);
    line(x1, y1, x3, y3);
    getch();
    float angle = 45;
    float rad = angle * PI / 180.0;

    int xr1 = x1 * cos(rad) - y1 * sin(rad),
        xr2 = x2 * cos(rad) - y2 * sin(rad),
        xr3 = x3 * cos(rad) - y3 * sin(rad),
        yr1 = x1 * sin(rad) + y1 * cos(rad),
        yr2 = x2 * sin(rad) + y2 * cos(rad),
        yr3 = x3 * sin(rad) + y3 * cos(rad);

    setcolor(RED);
    line(xr1, yr1, xr2, yr2);
    line(xr2, yr2, xr3, yr3);
    line(xr1, yr1, xr3, yr3);
    getch();

     angle = -45;
    rad = angle * PI / 180.0;

    int xr1 = x1 * cos(rad) - y1 * sin(rad),
        xr2 = x2 * cos(rad) - y2 * sin(rad),
        xr3 = x3 * cos(rad) - y3 * sin(rad),
        yr1 = x1 * sin(rad) + y1 * cos(rad),
        yr2 = x2 * sin(rad) + y2 * cos(rad),
        yr3 = x3 * sin(rad) + y3 * cos(rad);

    setcolor(RED);
    line(xr1, yr1, xr2, yr2);
    line(xr2, yr2, xr3, yr3);
    line(xr1, yr1, xr3, yr3);
    getch();
    closegraph();

    return 0;
}